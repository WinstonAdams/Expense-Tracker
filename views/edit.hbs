<div class="row mt-3 container w-50 m-auto">

  <form action="/records/{{ record._id }}?_method=PUT" method="POST" class="m-auto col-6">
    <div class="mb-5" style="text-align: center">
      <h3>請修改你的支出</h3>
    </div>
    <div>
      <label for="name">名稱*：</label>
      <input type="text" id="name" name="name" value="{{ record.name }}" required>
    </div>
    <div class="mt-3">
      <label for="date">日期*：</label>
      <input type="date" id="date" name="date" value="{{ date }}" required>
    </div>
    <div class="d-flex mt-3">
      <label for="category">類別*：</label>
      <div class="input-group w-50">
        <select class="form-select" id="category" name="category" required>
          <option>類別</option>
          <option value="家居物業" {{#if (equal categoryName "家居物業" )}}selected{{/if}}>家居物業</option>
          <option value="交通出行" {{#if (equal categoryName "交通出行" )}}selected{{/if}}>交通出行</option>
          <option value="休閒娛樂" {{#if (equal categoryName "休閒娛樂" )}}selected{{/if}}>休閒娛樂</option>
          <option value="餐飲食品" {{#if (equal categoryName "餐飲食品" )}}selected{{/if}}>餐飲食品</option>
          <option value="其他" {{#if (equal categoryName "其他" )}}selected{{/if}}>其他</option>
        </select>
      </div>
    </div>
    <div class="mt-3">
      <label for="amount">金額*：</label>
      <input type="number" id="amount" name="amount" value="{{ record.amount }}" required>
    </div>
    <div class="mt-3 mb-4">
      <span style="font-size: 10px;">*必填欄位</span>
    </div>
    <div class="d-flex justify-content-between align-items-center">
      <a href="/"><button type="button" class="btn btn-sm btn btn-info">back</button></a>
      <button type="submit" class="btn btn-primary">送出</button>
    </div>
  </form>

</div>