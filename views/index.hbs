<div class="mt-3 container w-50 m-auto">
  <form action="" id="filter">
    <div class="input-group w-50 m-auto">
      <select class="form-select" id="category" name="category">
        <option>類別</option>
        <option value="家居物業">家居物業</option>
        <option value="交通出行">交通出行</option>
        <option value="休閒娛樂">休閒娛樂</option>
        <option value="餐飲食品">餐飲食品</option>
        <option value="其他">其他</option>
      </select>
    </div>
  </form>

  <div class="mt-2 w-50 m-auto">
    <span>總金額：</span>
  </div>

  <div class="row mt-3">


    <div class="mt-3 d-flex justify-content-between align-items-center">
      <div class="d-flex align-items-center">
        <i class="me-2 fa-2xl fa-solid fa-house"></i>
        <div>
          <h5 class="mb-0">午餐</h5>
          <p class="mb-0">2022/2/5</p>
        </div>
      </div>
      <div class="d-flex align-items-center">
        <p class="mb-0 mx-3">100</p>
        <a href="" class="btn btn-outline-info mx-2">修改</a>
        <form action="" method="POST">
          <button type="submit" class="btn btn-outline-danger">刪除</button>
        </form>
      </div>
    </div>


  </div>

  <div class="row w-25 m-auto mt-5">
    <a href="" class="btn btn-warning">新增支出</a>
  </div>

</div>

<script>
  const categorySelect = document.querySelector('#category')
  const filter = document.querySelector('#filter')

  // 當下拉式選單改變時，送出表單
  categorySelect.addEventListener('change', event => {
    filter.submit()
  })
</script>